<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <title>Storno-Rechnung – {{brand.company}}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="./_base.css" />
</head>
<body>
<main class="doc">

  <!-- Topband -->
  <div class="topband">
    <span class="claim">{{brand.company}} • {{#if brand.website}}{{brand.website}}{{/if}}</span>
    <span class="right">{{brand.email}}</span>
  </div>

  <!-- Header -->
  <section class="header">
    <div class="brand-left">
      {{#if brand.logoUrl}}<img class="logo" src="{{brand.logoUrl}}" alt="{{brand.company}}">{{/if}}
      <div class="h1">Storno-Rechnung</div>
    </div>
    <div class="brand-right small">
      <div>{{brand.addr1}}</div>
      <div>{{brand.addr2}}</div>
    </div>
  </section>
  <hr class="hr"/>

  <!-- Adressblock -->
  <div class="addr">
{{fullName customer.parent}}
{{#if customer.address.street}}{{customer.address.street}}{{#if customer.address.houseNo}} {{customer.address.houseNo}}{{/if}}{{/if}}
{{#if customer.address.zip}}{{customer.address.zip}}{{/if}}{{#if customer.address.city}} {{customer.address.city}}{{/if}}
  </div>

  <!-- Betreff + Intro -->
  <div class="subject">Gutschrift zur Stornierung</div>
  <div class="intro">
    Wir bestätigen die Stornierung für <strong>{{customer.child.firstName}} {{customer.child.lastName}}</strong>
    am Standort <strong>{{booking.venue}}</strong>.
  </div>

  <!-- Fakten (mono) -->
  <div class="facts">
    <div class="row"><span class="k">Kundennummer:</span> <span class="v">{{customer.userId}}</span></div>
    <div class="row"><span class="k">Erziehungsberechtigte/r:</span> <span class="v">{{fullName customer.parent}}</span></div>
    <div class="row"><span class="k">Kind:</span> <span class="v">{{customer.child.firstName}} {{customer.child.lastName}}</span></div>
    <div class="row"><span class="k">Kündigungsdatum:</span> <span class="v">{{fmtDate booking.cancelDate}}</span></div>
    <div class="row"><span class="k">Angebot:</span> <span class="v">
      {{#if booking.offerTitle}}{{booking.offerTitle}}{{else}}
        {{#if booking.offerType}}{{booking.offerType}}{{else}}{{booking.offer}}{{/if}}
      {{/if}}
    </span></div>
  </div>

  <!-- Positionen -->
  <h2 class="h2">Positionen</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Beschreibung</th>
        <th class="ta-center">Menge</th>
        <th class="ta-right">Einzelpreis</th>
        <th class="ta-right">Gesamt</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Gutschrift – Storno {{#if booking.offerTitle}}{{booking.offerTitle}}{{else}}{{#if booking.offerType}}{{booking.offerType}}{{else}}{{booking.offer}}{{/if}}{{/if}}</td>
        <td class="ta-center">1</td>
        <td class="ta-right">{{fmtMoney amount currency}}</td>
        <td class="ta-right">{{fmtMoney amount currency}}</td>
      </tr>
    </tbody>
  </table>

  <div class="totals">
    <div class="label">Gesamt</div>
    <div class="amount">{{fmtMoney amount currency}}</div>
  </div>

  <!-- Abstand für fixen Footer -->
  <div class="footer-spacer"></div>

  <!-- Footer -->
  <section class="footer">
    <div>{{brand.company}} • {{brand.addr1}} • {{brand.addr2}}</div>
    <div>
      <a href="mailto:{{brand.email}}">{{brand.email}}</a>
      {{#if brand.website}} • <a href="{{brand.website}}">{{brand.website}}</a>{{/if}}
    </div>
    <div class="small">IBAN: {{brand.iban}} • BIC: {{brand.bic}} • Steuer-ID: {{brand.taxId}}</div>
  </section>

</main>
</body>
</html>






